{
  "cmake.configureOnOpen": true, // 打开工作区时自动配置CMake
  "cmake.buildDirectory": "${workspaceFolder}/build", // CMake的构建目录
  "cmake.configureSettings": { // CMake的配置设置
    "CMAKE_BUILD_TYPE": "Debug", // 构建类型
    "CMAKE_EXPORT_COMPILE_COMMANDS": "YES" // 导出编译命令
  },
  "cmake.generator": "Unix Makefiles", // CMake的生成器
  "cmake.cmakePath": "/opt/homebrew/bin/cmake", // CMake的路径
  "cmake.configureArgs": [], // 传递给CMake的配置参数
  "cmake.buildArgs": [], // 传递给CMake的构建参数
  "cmake.installPrefix": "${workspaceFolder}/install" // CMake的安装前缀
}